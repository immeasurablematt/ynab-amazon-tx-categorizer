{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@lib/*": ["lib/*"]
    },
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "lib/**/*.ts",
    "popup/**/*.tsx",
    "popup/**/*.ts",
    "options/**/*.tsx",
    "options/**/*.ts",
    "content/**/*.ts",
    "background/**/*.ts"
  ],
  "exclude": ["node_modules", "build"]
}
